@model IEnumerable<itwebtest.Models.BooksTable>

@{
    ViewBag.Title = "Index";
}

<h2>Admin Panel</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<label>Search By Title</label>
    </br>
<form method="get" asp-action="Index">
    <input type="text" name="searchText"  class="form-control"></br>
    <input type="submit" value="Search"></br></br>
</form>
</br></br>

<label>Search By Autor and date</label>
    </br>
<form asp-action="SearchAutor" asp-controller="BooksTables">
    <input type="text" name="Autor" class="form-control"></br>
    <input type="submit" value="Search"></br></br>
    @Html.Action("Search","SearchAutor")
</form>
</br>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Auteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editeur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NBexmplr)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editeur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NBexmplr)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
